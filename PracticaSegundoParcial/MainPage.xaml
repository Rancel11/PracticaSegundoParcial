<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaSegundoParcial.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Entry x:Name="cedulaEntry" Placeholder="Cédula" />
            <Entry x:Name="nombreEntry" Placeholder="Nombre" />
            <Entry x:Name="direccionEntry" Placeholder="Dirección" />
            <Entry x:Name="telefonoEntry" Placeholder="Teléfono" />

            <Button Text="Guardar Cliente" Clicked="OnGuardarClicked" />

            <ListView x:Name="clientesList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Cedula}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
